programa {
	funcao inicio() {
		inteiro num
		  escreva("Bem vindo, por favor, informe um numero" + "\n")
		  leia(num)
		  se(num<0) {
		      escreva("Numero negativo") }
		      senao
		          se (num==0) {escreva("Numero nulo") }
		          
                  senao {escreva("Numero positivo")}
		              
		          
	}
}
